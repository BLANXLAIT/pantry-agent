{
  "name": "@blanxlait/pantry-agent",
  "version": "0.2.2",
  "description": "MCP server for Kroger grocery shopping - search products, find stores, and manage your cart with AI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pantry-agent": "dist/index.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/*.test.*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "auth": "node dist/cli.js auth",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "kroger",
    "grocery",
    "shopping",
    "ai-agent",
    "claude",
    "llm"
  ],
  "author": "Ryan Niemes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BLANXLAIT/pantry-agent.git"
  },
  "homepage": "https://github.com/blanxlait/pantry-agent#readme",
  "bugs": {
    "url": "https://github.com/blanxlait/pantry-agent/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "dotenv": "^16.4.5",
    "open": "^10.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "prettier": "^3.8.1",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  }
}
